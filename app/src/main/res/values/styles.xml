<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>





    <!--Text Size 16-->

    <style name="Text_16">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text_16.PrimaryTextColor">
        <item name="android:textColor">@color/primaryGreyColor</item>
    </style>

    <style name="Text_16.SecondaryTextColor">
        <item name="android:textColor">@color/secondaryGreyColor</item>
    </style>

    <style name="Text_16.SecondaryTextColor.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text_16.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_16.Bold.AppPrimaryColor">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text_16.Colored">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text_16.PrimaryTextColor.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text_16.SecondaryTextColor.Light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text_16.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text_16.Black.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="PaddedColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingRight">48dp</item>
    </style>

    <style name="PaddedButton">
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingRight">48dp</item>
    </style>

</resources>
